@model List<PersonRequest>

<h1>Solicitudes</h1>
<hr>

<table class="table">
    <thead>
        <tr>
            <th>Fecha de envío</th>
            <th>Estado</th>
            <th>Proveedor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.ApplicationDate.ToShortDateString()</td>
                @if (request.StatusRequest == 0)
                {
                    <td>Pendiente</td>
                }
                <td>
