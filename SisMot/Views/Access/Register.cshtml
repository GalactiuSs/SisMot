@using SisMot.Models.CustomModels

@model UserDTO
<div class="container my-5">
    
    <div class="row justify-content-center">
        <h1>FORMULARIO DE REGISTRO</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-body">
                <form asp-action="Register" asp-controller="Access">
                    <div class="form-group">
                        <label for="firstName">Nombres:</label>
                        <input asp-for="firstName" type="text" class="form-control" required placeholder="Ingrese sus nombres">
                    </div>
                     <div class="form-group">
                        <label >Apellido Paterno:</label>
                        <input asp-for="lastName" type="text" class="form-control" required placeholder="Ingrese su primer apellido">
                    </div>
                    <div class="form-group">
                        <label >Apellido Materno:</label>
                        <input asp-for="secondLastName" type="text" class="form-control" required placeholder="Ingrese su segundo apellido">
                    </div>
                    <div class="form-group">
                        <label >Número de Celular:</label>
                        <input asp-for="phoneNumber" type="text" class="form-control" required placeholder="Ingrese su numero de celular">
                    </div>
                    <div class="form-group">
                        <label >CI:</label>
                        <input asp-for="ci" type="text" class="form-control" required placeholder="Ingrese su Carnet de Identidad">
                    </div>
                    <div class="form-group">
                        <label >Correo Electrónico:</label>
                        <input asp-for="email" type="text" class="form-control" required placeholder="Ingrese su correo electronico">
                    </div>
                    <div class="form-group">
                        <label >Su nombre de usuario sera enviado a su correo</label>
                    </div>
                    <div class="form-group">
                        <label >Contraseña:</label>
                        <input asp-for="password" type="password" class="form-control" required placeholder="Ingrese su contraseña">
                    </div>
                    <div class="form-group">
                        <label >Verificar Contraseña:</label>
                        <input asp-for="confirmPassword" type="password" class="form-control" required placeholder="Repita su contraseña">
                    </div>
                    <input type="submit" value="Registrarse" class="btn btn-primary btn-block"/>
                </form>
                <div class="mt-3 d-flex justify-content-between">
                    <a href="#">Iniciar sesión</a>
                </div>
            </div>
        </div>
    </div>
</div>